<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/container"
    android:layout_height="match_parent"
    tools:context=".activities.ContainerActivity">

    <FrameLayout
        android:id="@+id/header_container"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        ></FrameLayout>

    <FrameLayout
        android:id="@+id/frame_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/footer"
        android:layout_below="@id/header_container"
        ></FrameLayout>


    <RelativeLayout
        style="@style/FooterStyle"
        android:id="@+id/footer"
        android:background="@drawable/footer_background"
        android:layout_alignParentBottom="true"
        >

        <ImageView
            style="@style/FooterIconesStyle"
            android:id="@+id/home"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/home_inativa"></ImageView>

        <ImageView
            style="@style/FooterIconesStyle"
            android:id="@+id/add_publicacao"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/nova_publicao_inativa"></ImageView>

        <ImageView
            style="@style/FooterIconesStyle"
            android:id="@+id/perfil"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/user_inativo"></ImageView>


    </RelativeLayout>




</RelativeLayout>